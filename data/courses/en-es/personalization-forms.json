{
  "basic": {
    "id": "basic",
    "title": "Tell us about yourself",
    "description": "Help us personalize your Spanish learning experience with some basic information about you.",
    "usedInLessons": [7, 10],
    "fields": [
      {
        "id": "name",
        "type": "text",
        "label": "What's your name?",
        "placeholder": "Enter your name",
        "required": true,
        "validation": {
          "minLength": 2,
          "maxLength": 30
        },
        "fallback": "Alex"
      },
      {
        "id": "country",
        "type": "select",
        "label": "Where are you from?",
        "required": true,
        "options": [
          { "value": "Estados Unidos", "label": "United States" },
          { "value": "Reino Unido", "label": "United Kingdom" },
          { "value": "Canadá", "label": "Canada" },
          { "value": "Australia", "label": "Australia" },
          { "value": "Nueva Zelanda", "label": "New Zealand" },
          { "value": "Irlanda", "label": "Ireland" },
          { "value": "Sudáfrica", "label": "South Africa" },
          { "value": "otro país", "label": "Other country" }
        ],
        "fallback": "Estados Unidos"
      },
      {
        "id": "age",
        "type": "number",
        "label": "How old are you?",
        "placeholder": "Enter your age",
        "required": true,
        "validation": {
          "min": 13,
          "max": 100
        },
        "fallback": "25"
      },
      {
        "id": "housing_type",
        "type": "select",
        "label": "What type of home do you live in?",
        "required": true,
        "options": [
          { "value": "una casa", "label": "A house" },
          { "value": "un apartamento", "label": "An apartment" },
          { "value": "un piso", "label": "A flat" },
          { "value": "una residencia", "label": "A dorm/residence" },
          { "value": "una habitación", "label": "A room" }
        ],
        "fallback": "una casa"
      },
      {
        "id": "family_size",
        "type": "select",
        "label": "How would you describe your family?",
        "required": true,
        "options": [
          { "value": "una familia pequeña", "label": "A small family" },
          { "value": "una familia mediana", "label": "A medium family" },
          { "value": "una familia grande", "label": "A large family" },
          { "value": "vivo solo", "label": "I live alone" }
        ],
        "fallback": "una familia pequeña"
      }
    ]
  },
